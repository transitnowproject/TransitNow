        <!--app:srcCompat="@drawable/are_you" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you ?"
        android:id="@+id/txtAreYou"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/input_login"/>

    <ImageButton
        android:id="@+id/imgBtnDriver"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/driver_icon1"
        android:layout_below="@+id/txtAreYou"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imgBtnPassenger"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/passenger_icon1"
        android:layout_below="@+id/imgBtnDriver"
        android:layout_alignStart="@+id/imgBtnDriver"
        android:layout_marginTop="31dp" />

</RelativeLayout>
